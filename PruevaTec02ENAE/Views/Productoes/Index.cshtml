@model IEnumerable<PruevaTec02ENAE.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Productos</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Crear Producto</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                    @if(item.Imagen != null && item.Imagen.Length > 0)
                    {
                        <img class="bloque d mx-auto redondeado" src="data:image/jpg;base64,@(Convert.ToBase64String(item.Imagen))" style="max-width: 100px; max-height: 100px;">
                    }
                </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Nombre)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ProductoId">Editar</a> |
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.ProductoId">Detalles</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ProductoId">Borrar</a>
                    <a class="btn btn-danger" asp-action="DeleteImagen" asp-route-id="@item.ProductoId">Borrar img</a>
            </td>
        </tr>
}
    </tbody>
</table>
